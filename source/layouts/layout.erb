<!doctype html>
<html prefix="og: http://ogp.me/ns#">
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@cyrusinnovation">
    <meta name="twitter:creator" content="@SteveBrudz">
    <meta name="twitter:title" content="ratgraph.nyc">
    <meta name="twitter:description" content="An interactive visualization of rat and rodent sightings in New York City">
    <meta name="twitter:image:src" content="http://www.ratgraph.nyc/images/ratgraph.png">

    <meta property="og:title" content="Ratgraph.nyc"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="http://www.ratgraph.nyc/"/>
